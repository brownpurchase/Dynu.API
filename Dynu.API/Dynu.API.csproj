<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard1.3;netstandard1.4;netstandard1.5;netstandard1.6;netstandard2.0</TargetFrameworks>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>0.1.0</Version>
    <Authors>Telly Brown</Authors>
    <Company>Telly Brown</Company>
    <PackageLicenseUrl>https://github.com/tellybrown/Dynu.API/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/tellybrown/Dynu.API</PackageProjectUrl>
    <PackageIconUrl>https://mygetwwwmain.blob.core.windows.net/feedicons/dynu-api.png</PackageIconUrl>
    <Description>Dynamic DNS technology allows you to give your home network PC or server a permanent address on the Internet. Internet service providers change your IP address on a regular basis, but with dynamic DNS you can keep your domain name pointed to the current IP address of your home server or other devices.</Description>
    <PackageTags>dynu api ddns</PackageTags>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
  </ItemGroup>


  <ItemGroup>
    <PackageReference Include="JsonSubTypes" Version="1.4.0" />
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
  </ItemGroup>

</Project>
